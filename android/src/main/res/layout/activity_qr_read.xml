<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efffffff">

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/activity_qr_read_reader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:background="#4dFFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_finsh"
                android:layout_width="50dp"
                android:layout_height="49dp"
                android:padding="6dp"
                android:src="@drawable/whitetupian"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="49dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_qrcode"
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="我的二维码"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4dFFFFFF" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/smk_img" />

                <ImageView
                    android:id="@+id/scan_line"
                    android:layout_width="280dp"
                    android:layout_height="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tiaowen" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4dFFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4dFFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/transparent_backgroundlogin"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_chepaifu"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/huangsebeijing"
                    android:gravity="center"
                    android:text="车牌付"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_yuangongid"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_round_backgroundlogin"
                    android:gravity="center"
                    android:text="输入员工ID"
                    android:visibility="gone"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>